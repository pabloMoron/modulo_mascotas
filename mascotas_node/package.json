{
    "name": "mascotas",
    "version": "0.1.0",
    "repository": {
        "type": "git",
        "url": "git://github.com/nmarsollier/mascotas.git"
    },
    "description": "Mascotas - Programaci√≥n Avanzada",
    "author": "Nestor Marsollier",
    "license": "MIT",
    "scripts": {
        "start": "npm run build && npm run watch",
        "build": "npm run build-ts && npm run apidoc && npm run apidocmd",
        "serve": "node dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"nodemon --delay 3 dist/server.js\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "apidoc": "./node_modules/.bin/apidoc -i src -o ./dist/public",
        "apidocmd": "./node_modules/.bin/apidoc-markdown2 -p ./dist/public -o README-API.md"
    },
    "dependencies": {
        "apidoc-markdown2": "^0.3.7",
        "body-parser": "1.19.0",
        "compression": "1.7.4",
        "connect-mongo": "3.2.0",
        "cors": "2.8.5",
        "dotenv": "8.2.0",
        "escape-html": "1.0.3",
        "express": "4.17.1",
        "express-async-errors": "3.1.1",
        "helmet": "3.22.0",
        "ioredis": "4.16.3",
        "jsonwebtoken": "8.5.1",
        "mongoose": "5.9.12",
        "morgan": "1.10.0",
        "node-cache": "5.1.0",
        "passport": "0.4.1",
        "passport-jwt": "4.0.0",
        "uuid": "8.0.0",
        "winston": "3.2.1"
    },
    "devDependencies": {
        "@types/body-parser": "1.19.0",
        "@types/compression": "1.7.0",
        "@types/cors": "2.8.6",
        "@types/escape-html": "0.0.20",
        "@types/express": "4.17.6",
        "@types/helmet": "0.0.46",
        "@types/ioredis": "4.16.0",
        "@types/jsonwebtoken": "8.3.9",
        "@types/mongodb": "3.5.16",
        "@types/mongoose": "5.7.15",
        "@types/morgan": "1.9.0",
        "@types/node": "13.13.5",
        "@types/passport": "1.0.3",
        "@types/passport-jwt": "3.0.3",
        "@types/uuid": "7.0.3",
        "@typescript-eslint/eslint-plugin": "^3.1.0",
        "@typescript-eslint/parser": "^3.1.0",
        "apidoc": "^0.22.1",
        "apidoc-markdown": "5.0.2",
        "concurrently": "5.2.0",
        "nodemon": "2.0.3",
        "eslint": "7.2.0",
        "typescript": "3.8.3"
    },
    "nodemonConfig": {
        "delay": "3"
    }
}
